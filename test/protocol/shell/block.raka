require '../lib/raka'

dsl = Raka.new(self, output_types: [:txt])

txt.test = shell do |task|
    <<-SHELL
    echo -n Hello World > #{task.name}
    echo -n !!! >> #{task.name}
    SHELL
end

# rake task
task :default, [:ctx] => ['_out/test.txt'] do |t, args|
    args.ctx.add_test do
        assert_equal 'Hello World!!!', File.read(t.prerequisites[0])
    end
end
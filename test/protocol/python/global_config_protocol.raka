require 'logger'
require '../lib/raka'

dsl = Raka.new(self, output_types: [:txt], protocols: ['lang/python'])
py_template = <<~PYTHON
    import datetime

    <code>
PYTHON

txt.test = py* %(
    open('$@', 'w').write(datetime.datetime.min.strftime('%Y-%m-%d'))
